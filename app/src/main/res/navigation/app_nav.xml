<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.minhaquadra.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_matchesFragment"
            app:destination="@id/matchesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_agendaFragment"
            app:destination="@id/agendaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cadastrarTimeFragment"
            app:destination="@id/cadastrarTimeFragment" />
    </fragment>
    <fragment
        android:id="@+id/agendaFragment"
        android:name="com.example.minhaquadra.presentation.AgendaFragment"
        android:label="fragment_agenda"
        tools:layout="@layout/fragment_agenda" />
    <fragment
        android:id="@+id/matchesFragment"
        android:name="com.example.minhaquadra.presentation.MatchesFragment"
        android:label="fragment_matches"
        tools:layout="@layout/fragment_matches" />
    <fragment
        android:id="@+id/cadastrarTimeFragment"
        android:name="com.example.minhaquadra.presentation.CadastrarTimeFragment"
        android:label="fragment_cadastrar_time"
        tools:layout="@layout/fragment_cadastrar_time" />
</navigation>